# Path to top level dir
TOP = ../../..

# include master makefile
include $(TOP)/conf/master.mk

# Test science program
SCIENCE_PROG = test/example.xml

# Clean all of ot
otclean:
	$(SH) $(TOP)/conf/makeall.sh clean .

# tests
test: test2b

test1 SpTreeGUI: all
	java $(JVMFLAGS) jsky.app.ot.SpTreeGUI


test2 OT: all
	java $(JVMFLAGS) jsky.app.ot.OT

test2a: all
	java $(JVMFLAGS) jsky.app.ot.OT -internalframes

test2b: all
	java $(JVMFLAGS) jsky.app.ot.OT $(SCIENCE_PROG)

test2c: all
	java $(JVMFLAGS) jsky.app.ot.OT -internalframes $(SCIENCE_PROG)
