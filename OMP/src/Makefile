	@mkdir -p $(INSTALL_ROOT)/bin
	@printf \
	"#!/bin/csh -f\
	\n#########################################################################################\
	\n# This file has been automatically generated by \"gmake\" using the setting in            #\
	\n# $(CONF_HOME)/make.conf. Modifications can be lost after a new make.                    \
	\n#                                                                                       #\
	\n# For editing this script and keeping the modifications make a copy of this script in   #\
	\n# this directory and edit the copy.                                                     #\
	\n#########################################################################################\
	\n\
	\nset OMP_HOME = $(shell cd $(INSTALL_ROOT); pwd)\
	\n\
	\nset JAVA = $(JAVA)\
	\n\
	\nset MSB_URL = $(MSB_URL)\
	\n\
	\nset CLASSPATH = $(shell echo $(addprefix DOLLAR{OMP_HOME}/tools/, $(notdir $(ALL_TOOLS))) | sed -e 's/ /:/g' | sed -e 's/DOLLAR/\\044/g'):$(shell echo $(addprefix DOLLAR{OMP_HOME}/lib/, $(notdir $(ALL_LIBS))) | sed -e 's/ /:/g' | sed -e 's/DOLLAR/\\044/g')\
	\n\
	\n$$""{JAVA} -D$$""{MSB_URL} -classpath $$""{CLASSPATH} omp.SpClient $$""*\
	\n\
	\n" > $@

	@echo Creating $@
	@chmod 775 $@



$(INSTALL_ROOT)/bin/ot.bat: $(INSTALL_BAT_SCRIPT) $(CONF_HOME)/make.conf Makefile
	@mkdir -p $(INSTALL_ROOT)/bin
	@cp $(INSTALL_BAT_SCRIPT) $@
	@echo Creating $@

